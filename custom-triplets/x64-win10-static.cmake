SET(VCPKG_TARGET_ARCHITECTURE x64)
SET(VCPKG_CRT_LINKAGE static)
SET(VCPKG_LIBRARY_LINKAGE dynamic)

LIST(APPEND VCPKG_CMAKE_CONFIGURE_OPTIONS -DBOOST_USE_WINAPI_VERSION=0x0A00 -D_WIN32_WINNT=0x0A00 -DWINVER=0x0A00)

IF ("${PORT}" STREQUAL "opentelemetry-cpp")
    LIST(APPEND VCPKG_LINKER_FLAGS_DEBUG "--config Debug")
    LIST(APPEND VCPKG_LINKER_FLAGS_RELEASE "--config Release")
ELSE ()
    LIST(APPEND VCPKG_CMAKE_CONFIGURE_OPTIONS "-DCMAKE_MAP_IMPORTED_CONFIG_RelWithDebInfo=RelWithDebInfo;Release;Debug;")
ENDIF ()
IF ("${PORT}" STREQUAL "openal-soft")
    LIST(APPEND VCPKG_CMAKE_CONFIGURE_OPTIONS "-DFORCE_STATIC_VCRT")
ENDIF ()
